# ========================================
# Azure OpenAI Configuration
# ========================================
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# ========================================
# Azure Speech Services
# ========================================
AZURE_SPEECH_KEY=your-speech-key-here
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_LANGUAGE=en-US
ENABLE_SPEAKER_DIARIZATION=true

# ========================================
# Azure Language Service (for PII detection)
# ========================================
AZURE_LANGUAGE_KEY=your-language-key-here
AZURE_LANGUAGE_ENDPOINT=https://your-language-resource.cognitiveservices.azure.com/

# ========================================
# Azure Cosmos DB
# ========================================
COSMOSDB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOSDB_KEY=your-cosmos-key-here
COSMOS_DB_DATABASE=advisor_productivity
COSMOS_DB_CONTAINER=sessions

# ========================================
# Azure Storage (optional - for audio file archival)
# ========================================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccount;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_BLOB_STORAGE_NAME=yourstorageaccount
AZURE_STORAGE_CONTAINER=advisor-sessions

# ========================================
# Azure Authentication (for managed identity)
# ========================================
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret

# ========================================
# Application Insights (optional)
# ========================================
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://...

# ========================================
# Backend Configuration
# ========================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# File Upload Configuration
# ========================================
MAX_UPLOAD_SIZE=524288000
UPLOAD_DIRECTORY=./uploads
DATA_DIRECTORY=./data
AUDIO_CHUNK_DURATION_MS=5000
ENABLE_REAL_TIME_TRANSCRIPTION=true

# ========================================
# Agent Configuration
# ========================================
MAX_CONCURRENT_AGENTS=5
DEFAULT_AGENT_TIMEOUT=300
ENABLE_AGENT_TELEMETRY=true

# ========================================
# Sentiment Analysis
# ========================================
SENTIMENT_ANALYSIS_ENABLED=true
SENTIMENT_WINDOW_SECONDS=30

# ========================================
# Recommendation Engine
# ========================================
RECOMMENDATION_ENABLED=true
RECOMMENDATION_CONFIDENCE_THRESHOLD=0.7
MAX_RECOMMENDATIONS_PER_SESSION=10

# ========================================
# PII Protection
# ========================================
PII_DETECTION_ENABLED=true
AUTO_REDACT_PII=true

# ========================================
# Summarization
# ========================================
ENABLE_AUTO_SUMMARIZATION=true
SUMMARY_TRIGGER_THRESHOLD_MINUTES=15
DEFAULT_SUMMARY_TYPE=detailed
DEFAULT_SUMMARY_PERSONA=advisor

# ========================================
# Compliance
# ========================================
COMPLIANCE_MODE_ENABLED=true
AUDIT_TRAIL_ENABLED=true
REQUIRE_RECOMMENDATION_APPROVAL=true

# ========================================
# Session Management
# ========================================
MAX_SESSION_DURATION_HOURS=4
AUTO_END_SESSION_ON_INACTIVITY_MINUTES=30

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false
