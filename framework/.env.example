# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=development
LOG_LEVEL=info

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=your-resource-group-name
AZURE_OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_VERSION=2024-02-01

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_AUTH_ENABLED=false
API_CORS_ORIGINS=["*"]

# Security Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-here-abcd
JWT_SECRET_KEY=your-jwt-secret-key-here
SESSION_TIMEOUT=3600

# Database Configuration (Optional)
DATABASE_ENABLED=false
DATABASE_URL=postgresql://user:password@localhost:5432/magentic

# Redis Configuration (Optional)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0

# Observability Configuration (Phase 1 - MAF OpenTelemetry)
OBSERVABILITY_ENABLED=true

# OTLP Export (for Jaeger, Zipkin, etc.)
OBSERVABILITY_OTLP_ENDPOINT=http://localhost:4317
OBSERVABILITY_OTLP_PROTOCOL=grpc
OBSERVABILITY_OTLP_INSECURE=true

# Azure Application Insights
# OBSERVABILITY_APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here;IngestionEndpoint=https://...

# VS Code AI Toolkit
# OBSERVABILITY_VS_CODE_EXTENSION_PORT=51000

# Legacy Monitoring (deprecated - use observability instead)
MONITORING_ENABLED=false
METRICS_ENABLED=false
TRACING_ENABLED=false
HEALTH_CHECKS_ENABLED=true

# MCP Configuration
MCP_ENABLED=true
MCP_SERVER_PORT=8001
MCP_TOOLS_ENABLED=true

# Workflow Configuration
WORKFLOWS_ENABLED=true
WORKFLOW_DIR=./workflows
MAX_CONCURRENT_WORKFLOWS=10

# Development Configuration
DEBUG=false
RELOAD=false