# Magentic Foundation Framework - Package Configuration
from setuptools import setup, find_packages
from pathlib import Path

# Read the README file
readme_file = Path(__file__).parent / "README.md"
long_description = readme_file.read_text(encoding="utf-8") if readme_file.exists() else ""

# Read requirements
requirements_file = Path(__file__).parent / "requirements.txt"
if requirements_file.exists():
    with open(requirements_file, 'r', encoding='utf-8') as f:
        requirements = [line.strip() for line in f if line.strip() and not line.startswith('#')]
else:
    requirements = [
        "azure-identity>=1.15.0",
        "azure-ai-projects>=1.0.0b4", 
        "fastapi>=0.104.0",
        "uvicorn[standard]>=0.24.0",
        "pydantic>=2.5.0",
        "pydantic-settings>=2.1.0",
        "structlog>=23.2.0",
        "aiohttp>=3.9.0",
        "python-dotenv>=1.0.0",
        "pyyaml>=6.0.1",
        "cryptography>=41.0.0",
        "websockets>=12.0"
    ]

setup(
    name="magentic-foundation",
    version="1.0.0",
    author="Magentic Foundation Team",
    author_email="team@magentic-foundation.com",
    description="Enterprise Multi-Agent Orchestration Framework",
    long_description=long_description,
    long_description_content_type="text/markdown",
    url="https://github.com/your-org/magentic-foundation",
    packages=find_packages(),
    classifiers=[
        "Development Status :: 4 - Beta",
        "Intended Audience :: Developers",
        "License :: OSI Approved :: MIT License",
        "Operating System :: OS Independent",
        "Programming Language :: Python :: 3",
        "Programming Language :: Python :: 3.8",
        "Programming Language :: Python :: 3.9",
        "Programming Language :: Python :: 3.10",
        "Programming Language :: Python :: 3.11",
        "Programming Language :: Python :: 3.12",
    ],
    python_requires=">=3.8",
    install_requires=requirements,
    extras_require={
        "dev": [
            "pytest>=7.4.0",
            "pytest-asyncio>=0.21.0",
            "pytest-cov>=4.1.0",
            "black>=23.11.0",
            "isort>=5.12.0",
            "mypy>=1.7.0",
            "pre-commit>=3.6.0",
        ],
        "monitoring": [
            "opentelemetry-api>=1.21.0",
            "opentelemetry-sdk>=1.21.0",
            "prometheus-client>=0.19.0",
            "psutil>=5.9.0",
        ],
        "database": [
            "sqlalchemy>=2.0.0",
            "alembic>=1.13.0",
            "redis>=5.0.0",
        ]
    },
    entry_points={
        "console_scripts": [
            "magentic-foundation=magentic_foundation.main:main",
        ],
    },
    include_package_data=True,
    package_data={
        "magentic_foundation": [
            "examples/**/*.py",
            "examples/**/*.yaml",
            "*.yml",
            "*.yaml",
        ],
    },
)